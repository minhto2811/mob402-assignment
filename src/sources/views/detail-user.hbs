<div class="m-auto" style="width: 600px;">
    <h2 class="text-center my-3">Thiết lập tìa khoản</h2>
    <form method="post" action="/users/{{user._id}}?_method=PUT" enctype="multipart/form-data">
        <div class="form-group my-2">
            <label for="fullname">Họ tên:</label>
            <input type="text" class="form-control my-1" id="fullname" placeholder="Enter full name" name="fullname"
                value="{{user.fullname}}" required>
        </div>
        <div class="form-group my-2">
            <label for="email">Email:</label>
            <input type="email" class="form-control my-1" id="email" name="email" placeholder="Enter email"
                value="{{user.email}}" required>
        </div>
        <div class="form-group my-2">
            <label for="username">Tài khoản:</label>
            <input type="text" class="form-control my-1" id="username" name="username" placeholder="Enter username"
                value="{{user.username}}" required>
        </div>
        <div class="form-group my-2">
            <label for="password">Mật khẩu:</label>
            <input type="password" class="form-control my-1" id="password" name="password" placeholder="Enter password"
                value="{{user.password}}" required>
        </div>
        <div class="form-group my-2">
            <label for="image">Ảnh đại diện</label>
            <img src="{{user.image}}" style="width: 100px;height: 100px;" alt="Lỗi hiển thị!" />
            <input type="file" class="form-control-file" name="image" id="image">
        </div>
        <div class="form-group my-2">
            <label for="username">Số điện thoại:</label>
            <input type="text" class="form-control my-1" id="phone" name="phone" placeholder="Enter phone"
                value="{{user.phone}}" required>
        </div>
        <div class="form-group my-2">
            <label for="username">Địa chỉ:</label>
            <input type="text" class="form-control my-1" id="address" name="address" placeholder="Enter address"
                value="{{user.address}}" required>
        </div>
        <div class="form-group my-2">
            <label for="username">Ngày sinh:</label>
            <input type="text" class="form-control my-1" id="date" name="date" placeholder="Enter date"
                value="{{user.date}}" required>
        </div>
        <div class="form-group" hidden>
            <input type="text" name="old" value="{{user.image}}">
        </div>
        <button type="submit" class="btn btn-success col-3 col-lg-12 my-3">Submit</button>


    </form>
</div>