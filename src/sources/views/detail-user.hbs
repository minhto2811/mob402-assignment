<div class="m-auto" style="width: 600px;">
    <h2 class="text-center my-3">Settings</h2>
    <form>
        <div class="form-group my-2">
            <label for="full-name">Full Name:</label>
            <input type="text" class="form-control my-1" id="full-name" placeholder="Enter full name"
                value="{{user.fullname}}">
        </div>
        <div class="form-group my-2">
            <label for="email">Email:</label>
            <input type="email" class="form-control my-1" id="email" placeholder="Enter email" value="{{user.email}}">
        </div>
        <div class="form-group my-2">
            <label for="username">Username:</label>
            <input type="text" class="form-control my-1" id="username" placeholder="Enter username"
                value="{{user.username}}">
        </div>
        <div class="form-group my-2">
            <label for="password">Password:</label>
            <input type="password" class="form-control my-1" id="password" placeholder="Enter password"
                value="{{user.password}}">
        </div>
         <div class="form-group my-2">
            <label for="username">Phone:</label>
            <input type="text" class="form-control my-1" id="phone" placeholder="Enter phone"
                value="{{user.phone}}">
        </div>
         <div class="form-group my-2">
            <label for="username">Address:</label>
            <input type="text" class="form-control my-1" id="address" placeholder="Enter address"
                value="{{user.address}}">
        </div>
         <div class="form-group my-2">
            <label for="username">Date:</label>
            <input type="text" class="form-control my-1" id="date" placeholder="Enter date"
                value="{{user.date}}">
        </div>
        <button type="submit" class="btn btn-success col-3 col-lg-12 my-3">Submit</button>


    </form>
</div>