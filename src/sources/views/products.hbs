<div class="container text-center">

    <h1 class="my-4">Danh sách sản phẩm</h1>
    {{#if type_eq_0}}
    <a href="products/add-product">Thêm sản phẩm</a>
    {{/if}}

    {{#if type_eq_0}}
    <table class="table table-striped table-bordered col-12 my-4">
        <thead>
            <tr>
                <th>#</th>
                <th>Mã</th>
                <th>Tên sản phẩm</th>
                <th>Đơn giá</th>
                <th>Hình ảnh</th>
                <th>Màu sắc</th>
                <th>Loại</th>

                <th>Hành động</th>

            </tr>
        </thead>
        <tbody>

            {{#each products}}
            <tr class="my-3">
                <td>{{sum @index 1}}</td>
                <td>{{this.code}}</td>
                <td>{{this.name}}</td>
                <td>{{this.price}}</td>
                <td><img src="{{this.image}}" alt="Lỗi hình ảnh" width="60px" height="60px"></td>
                <td>{{this.color}}</td>
                <td>{{this.type}}</td>

                <td>
                    <button type="button" class="btn btn-danger btn-sm mr-2" data-bs-toggle="modal"
                        data-bs-target="#deleteModal" data-bs-id="{{this._id}}">Xóa</button>
                    <button type="button" class="btn btn-primary btn-sm ms-3"><a href="products/{{this._id}}"
                            class="btn-edit">Sửa</a></button>
                </td>

            </tr>
            {{/each}}

        </tbody>
    </table>

    {{else}}
    <div class="container-fluid">

        <div>
            <p class="a"><a style="text-decoration: none;color: black;" href="#">SẢN PHẨM NỔI BẬT</a></p>
        </div>
        <div class="row">
            <div class="row d-flex justify-content-between ">
                {{#each products}}

                <div class="card align-items-center col-md-3 my-3" style="width: 18rem;">
                    <img src="{{this.image}}" class="card-img-top" alt="Lỗi" style="width: 240px;height: 270px;">
                    <div class="card-body">
                        <span style="color: #b9b7b7; text-transform:
                  uppercase;font-size: 13px;">{{this.type}}</span>
                        <h5 class="card-title">{{this.name}}</h5>
                        <p style="padding-top: 5px;font-weight: bold;color: red;" class="card-text">{{this.price}}</p>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk
                            of the card's content.</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    {{/if}}


</div>



{{!-- form hidden --}}

<form method="post" name="delete-product-form"></form>



{{!-- modal delete --}}

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Xóa sản phẩm</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có muốn xóa thông tin sản phẩm này?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Quay lại</button>
                <button type="button" class="btn btn-primary" id="btn-delete-product">Tiếp
                    tục</button>
            </div>
        </div>
    </div>
</div>




<script>
    document.addEventListener("DOMContentLoaded", function () {
        var Id_product;
        var deleteForm = document.forms['delete-product-form'];

        const deleteModal = document.getElementById('deleteModal')
        deleteModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            Id_product = button.getAttribute('data-bs-id');
        })

        var btn_del = document.getElementById('btn-delete-product');
        btn_del.onclick = function () {
            deleteForm.action = '/products/' + Id_product + "?_method=DELETE";
            deleteForm.submit();
        }
    });
</script>