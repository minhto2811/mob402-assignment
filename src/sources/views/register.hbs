<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">Register</h4>
        </div>
        <div class="card-body">
          <form method="post" action="/registerCheckout" enctype="multipart/form-data">
            <div class="form-group">
              <label for="fullname">Họ tên</label>
              <input type="text" class="form-control form-control-lg rounded-0 my-2" name="fullname" id="fullname"
                required>
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control form-control-lg rounded-0 my-2" name="email" id="email" required>
            </div>
            <div class="form-group">
              <label for="username">Tài khoản</label>
              <input type="text" class="form-control form-control-lg rounded-0 my-2" name="username" id="username"
                required>
            </div>
            <div class="form-group">
              <label for="password">Mật khẩu</label>
              <input type="password" class="form-control form-control-lg rounded-0 my-2" name="password" id="password"
                required>
            </div>
            <div class="form-group">
              <label for="phone">Số điện thoại</label>
              <input type="number" class="form-control form-control-lg rounded-0 my-2" name="phone" id="phone" required>
            </div>
            <div class="form-group">
              <label for="address">Địa chỉ</label>
              <input type="text" class="form-control form-control-lg rounded-0 my-2" name="address" id="address"
                required>
            </div>
            <div class="form-group">
              <label for="date">Ngày sinh</label>
              <input type="date" class="form-control form-control-lg rounded-0 my-2" name="date" id="date" required>
            </div>
            <div class="form-group p-4">
              <label class="me-2" for="avatar">Ảnh đại diện</label>
              <input type="file" class="form-control-file" name="avatar" id="avatar" required>
            </div>
            <button type="submit" class="btn btn-success btn-lg float-right">Đăng kí</button>
          </form>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-center">
            <a href="sign-in" class="btn btn-link">Trở lại</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>