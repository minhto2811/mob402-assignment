<div class="container text-center">
    <h1 class="my-4">User Management</h1>
    <!-- Form tìm kiếm user -->
    <form class="form-inline mb-4">
        <div class="d-flex flex-row ">
            <input class="form-control" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success ms-3" type="submit">Search</button>
        </div>

    </form>



    <!-- Danh sách user -->
    <table class="table table-striped table-bordered">
        <thead class="bg-dark-subtle">
            <tr>
                <th>#</th>
                <th>ID</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>

            {{#each users}}
            <tr>
                <td>{{sum @index 1}}</td>
                <td>{{this._id}}</td>
                <td>{{this.fullname}}</td>
                <td>{{this.email}}</td>
                <td>
                    <!-- Các nút xóa, sửa user -->
                    <button type="button" class="btn btn-danger btn-sm mr-2">Xóa</button>
                    <button type="button" class="btn btn-primary btn-sm ms-3"><a class="btn-edit"
                            href="users/{{this._id}}">Sửa</a></button>
                </td>
            </tr>
            {{/each}}


        </tbody>
    </table>
</div>